<form class="product-form-inline" method="post" action="/cart/add" data-product-form-inline>
  {% include 'product-options', type: 'select' %}

  <div class="product-form-inline-atc">
    {% include 'quantity' %}



  </div>

  <div class="product-form-inline-buttons-container">
    <button
      class="product-form-inline-atc-button"
      type="submit"
      data-product-atc>
      {{ 'product.add_to_cart.available' | t }}
    </button>
    <div class="product-menu-button product-menu-button-share wishlist desktop">{% include 'iwish_v2' with 'iwishproduct' %}</div>
  </div>

</form>
