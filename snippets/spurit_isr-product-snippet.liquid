    var ISRParams = ISRParams || {};
    ISRParams.id = "2c8fb8ecd0cb151c08d41f06902b83ba";
    ISRParams.apiScript = "{{ 'api.jquery.js' | shopify_asset_url }}";
    ISRParams.moneyFormat = "{{shop.money_format | strip_html}}";
    ISRParams.fullMoneyFormat = "{{shop.money_with_currency_format | strip_html}}";
    ISRParams.customer = {};
