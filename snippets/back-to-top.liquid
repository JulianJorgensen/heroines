{% comment %} 
  Reduce below value if you need the back to the top button to appear higher up on the page. 
  That value is in pixels.
{% endcomment %}
{% assign vertical_offset_for_trigger = 300 %}
{% comment %} 
  Vertical offset from bottom of browser for the position of the button.
{% endcomment %}
{% assign position_from_bottom = '4em' %}
<a href="#" title="Back to the top" class="footnav-title back-to-top">
  <span>Til Top</span> <span class="arrow-top"></span> 
</a>
{{ '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css' | stylesheet_tag }}
<style>
.back-to-top {
  position: absolute;
  bottom: 0;
  right: 0px;
  top: 87px;
  text-decoration: none;
  color: #fff !important;
  font-size: 20px;
  font-weight: bold;
  padding: 0.3em;
  padding-right: 0;
  padding-top:0;
  display: block;
  height: 30px;
}
.back-to-top i {
  vertical-align: middle;
}
.back-to-top span {
  padding-left: 0.5em;
}
.back-to-top i + span {
  padding-left: 0;
}
.back-to-top:hover {
  text-decoration: none;
  color: #555;
}
.arrow-top{
  background: url('https://cdn.shopify.com/s/files/1/2137/0833/files/to-top.png?4046274249630079945') no-repeat center center;
  background-size: 14px 30px;
  width: 14px;
  height: 30px;
  vertical-align: -9px;
  margin-left: 17px;
  display: inline-block;
}
  
</style>
<script>
window.onload = function() {
 jQuery(function($) {
   var offset = {{ vertical_offset_for_trigger }};
   var duration = 500;
 
   $('.back-to-top').unbind('click.smoothscroll').bind('click', function(e) {
     e.preventDefault();
     $('html, body').animate( { scrollTop: 0 }, duration);
     return false;
   })
 });
}
</script>