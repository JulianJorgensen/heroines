{% if iwish == 'iwishhead' %}
	<script>
	  var iwish_template='{{template}}';
	  var iwish_cid='{{ customer.id }}';
	</script>
	<script defer="defer" src="{{ 'iwishHeader.js' | asset_url }}"></script>
{% elsif iwish == 'iwishlink' %}
	<a class="iWishView" href="#" data-customer-id="{% if customer %}{{ customer.id }}{% else %}0{% endif %}">Wishlist</a>
{% elsif iwish == 'iwishproduct' %}
	<a class="iWishAdd" href="#" data-customer-id="{% if customer %}{{ customer.id }}{% else %}0{% endif %}" data-product="{{ product.id }}">Add to wishlist</a> 
{% elsif iwish == 'iwishfooter' %}
	<script defer="defer" src="{{ 'iwish.js' | asset_url }}"></script>
{% endif %}
